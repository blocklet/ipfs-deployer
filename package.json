{
  "name": "ipfs-deployer",
  "description": "Blocklet to help you run IPFS nodes on ABT Node",
  "private": true,
  "keywords": [
    "blocklet"
  ],
  "publishConfig": {
    "directory": ".blocklet/bundle/"
  },
  "author": "wangshijun <shijun@arcblock.io> https://github.com/wangshijun",
  "repository": {
    "type": "git",
    "url": "https://github.com/blocklet/ipfs-deployer"
  },
  "bugs": {
    "url": "https://github.com/blocklet/ipfs-deployer/issues",
    "email": "shijun@arcblock.io"
  },
  "version": "0.1.0",
  "dependencies": {},
  "scripts": {
    "lint": "eslint src api",
    "clean": "rm -rf .blocklet",
    "build": "yarn clean && npm run build:blocklet",
    "bundle": "npm run clean && npm run build && abtnode bundle --create-release",
    "deploy": "npm run release && abtnode deploy .blocklet/bundle"
  },
  "lint-staged": {
    "*.{js,jsx,mjs,ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{css,less,scss,json,graphql}": [
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && lerna run precommit",
      "pre-push": "lint-staged && lerna run prepush"
    }
  },
  "devDependencies": {
    "babel-eslint": "^10.1.0",
    "eslint": "6.8.0",
    "eslint-config-airbnb": "18.1.0",
    "eslint-plugin-jsx-a11y": "^6.1.1",
    "eslint-plugin-react": "^7.11.0",
    "eslint-config-prettier": "latest",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-prettier": "latest",
    "husky": "^4.2.3",
    "lint-staged": "^10.1.1",
    "prettier": "^2.0.2"
  },
  "license": "Apache-2.0"
}
